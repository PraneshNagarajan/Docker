# use ubuntu as base image
FROM ubuntu

#install nodejs
RUN apt update
RUN DEBIAN__FRONTEND=noninteractive apt install --no-install-recommends tzdata nodejs npm curl -y
ENV PATH=/usr/bin/npm;/usr/bin/node:$PATH

#create nodej app
WORKDIR /node-app
RUN npm init -y
RUN touch "app.js" 
RUN npm i express
RUN printf 'const express = require("express"); \n const app = express() \n const PORT = 8080 \n app.get("/", (req,res) => {  \n    res.send("hello-world") \n })  \n app.listen(PORT, () => {  \n  console.log("server is runing on port 8080") \n })' > app.js


#Primary command
CMD node app.js
